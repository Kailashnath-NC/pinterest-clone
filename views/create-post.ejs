<% include ./partials/header.ejs %>
    <div id="create-post-container" class="w-full flex grow items-center justify-center bg-zinc-600">
        <div class="px-8 py-6 rounded-2xl border border-zinc-500">
            <!-- w-4/6 h-4/6  -->
            <h1 class="text-2xl font-semibold text-zinc-200 ">Create New Pin</h1>
            <hr class="border-zinc-500" />
            <form action="/create-post" method="post" enctype="multipart/form-data" class="flex flex-col gap-2">
                <!-- <div> -->
                <label for="image" class="mt-4 text-zinc-300">Upload Image</label>
                <!-- <label for="image"></label> -->
                <input type="file" name="imageFile" id="image" class="text-zinc-300 " />
                <!-- </div> -->
                <!-- <div> -->
                <label for="title" class="mt-4 text-zinc-300">Title</label>
                <input type="text" name="imageCaption" id="title" placeholder="Add a title"
                    class="py-4 px-2 rounded-lg bg-zinc-500 text-white outline-none placeholder:text-zinc-300" />
                <!-- </div> -->
                <!-- <div> -->
                <label for="desription" class="mt-4 text-zinc-300">Description</label>
                <textarea rows="10" style="resize: none;" type="text" name="imageDescription" id="desription"
                    placeholder="Add a description"
                    class="py-4 px-2 rounded-lg bg-zinc-500 text-white outline-none placeholder:text-zinc-300"></textarea>
                <!-- </div> -->
                <div class="flex gap-2">
                    <a href="/profile"
                        class="bg-zinc-700 hover:bg-zinc-700/75 text-white font-semibold text-md py-4 grow rounded-full mt-2 text-center">Cancel</a>
                    <button type="submit"
                        class="bg-red-500 hover:bg-red-600 text-white font-semibold text-md py-4 grow rounded-full mt-2 text-center">Create
                        Post</button>
                </div>
            </form>
        </div>
    </div>
    <% include ./partials/footer.ejs %>