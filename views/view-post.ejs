<% include ./partials/header.ejs %>
    <div class="w-full grow bg-zinc-600 text-white flex items-center justify-center">
        <div class=" rounded-lg px-2 py-4 flex gap-4 items-between justify-center">
            <img src="<%= selectedPost.imageUrl %>" alt="" class="max-w-xl border border-zinc-500 p-1">
            <div class="py-10 flex flex-col justify-between items-center">
                <div class="w-full text-center">
                    <h3 class="text-4xl font-medium">
                        <%= selectedPost.imageCaption %>
                    </h3>
                    <p class="text-md font-normal my-10">
                        <%= selectedPost.imageDescription %>
                    </p>
                </div>
                <div class="flex flex row w-full justify-between gap-2">
                    <a href="/show/my-pins"
                        class="bg-zinc-500 hover:bg-zinc-500/50 px-4 py-2  rounded-full font-semibold text-center">Return
                        Back</a>
                    <a href="/delete-post/<%= selectedPost._id %>"
                        class="bg-red-500 hover:bg-red-600 px-4 py-2  rounded-full font-semibold text-center">Delete
                        Post</a>
                </div>
            </div>
        </div>
    </div>
    <% include ./partials/footer.ejs %>